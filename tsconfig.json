{
	"compilerOptions": {
		"strict": true,
		"noEmit": true,
		"allowJs": true,
		"declaration": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"noUncheckedIndexedAccess": true,
		"jsx": "react-jsx",
		"target": "es2022",
		"moduleDetection": "force",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
